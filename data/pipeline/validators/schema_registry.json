    "market.tick.v1": {
      "description": "النبضة السعرية القياسية الموحدة",
      "status": "ACTIVE",
      "required_fields": [
        "time",
        "symbol",
        "price",
        "quantity",
        "source"
      ],
      "field_definitions": {
        "time": "float (Unix Timestamp UTC)",
        "symbol": "string (UPPERCASE, e.g. BTCUSDT)",
