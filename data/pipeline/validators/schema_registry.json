      "status": "EXPERIMENTAL",
      "required_fields": [
        "model_id",
        "symbol",
        "prediction",
        "confidence"
      ],
      "field_definitions": {
        "model_id": "string",
        "symbol": "string",
        "prediction": "float (range: -1.0 to 1.0)",
        "confidence": "float (range: 0.0 to 1.0)",
        "features_snapshot": "array (float)"
      }
    }
  }
