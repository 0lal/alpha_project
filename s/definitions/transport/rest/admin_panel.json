{
  "_header": {
    "Goal": "مخطط إعدادات التشغيل للوحة الإدارة.",
    "Dependencies": [
      "Ops Console",
      "Risk Manager",
      "Audit"
    ]
  },
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "alpha/transport/rest/admin_panel.json",
  "title": "Admin Panel System Config",
  "description": "Validated runtime config for operators.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "mode": {
      "type": "string",
      "enum": [
        "paper",
        "live"
      ]
    },
    "kill_switch": {
      "type": "boolean"
    },
    "risk_profile": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "max_position_size": {
          "type": "number",
          "exclusiveMinimum": 0
        },
        "max_drawdown": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "max_leverage": {
          "type": "number",
          "minimum": 1,
          "maximum": 20
        },
        "max_daily_loss": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": [
        "max_position_size",
        "max_drawdown",
        "max_leverage",
        "max_daily_loss"
      ]
    },
    "throttling": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "orders_per_second": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10000
        },
        "requests_per_minute": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000000
        }
      },
      "required": [
        "orders_per_second",
        "requests_per_minute"
      ]
    },
    "audit": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "retention_days": {
          "type": "integer",
          "minimum": 1,
          "maximum": 3650
        }
      },
      "required": [
        "enabled",
        "retention_days"
      ]
    }
  },
  "required": [
    "mode",
    "kill_switch",
    "risk_profile",
    "throttling",
    "audit"
  ]
}
