{
  "_header": {
    "Goal": "هيكل بيانات السوق للعملاء الخارجيين عبر REST.",
    "Dependencies": [
      "API Gateway",
      "Client SDKs",
      "Public Data Service"
    ]
  },
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "alpha/transport/rest/public_api.json",
  "title": "Public API Market Data",
  "description": "High-fidelity market data payload for public clients.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "symbol": {
      "type": "string",
      "pattern": "^[A-Z0-9._-]{1,30}$"
    },
    "venue": {
      "type": "string",
      "minLength": 2,
      "maxLength": 20
    },
    "bid": {
      "type": "number",
      "exclusiveMinimum": 0
    },
    "ask": {
      "type": "number",
      "exclusiveMinimum": 0
    },
    "last": {
      "type": "number",
      "exclusiveMinimum": 0
    },
    "spread": {
      "type": "number",
      "minimum": 0
    },
    "volume_24h": {
      "type": "number",
      "minimum": 0
    },
    "quote_currency": {
      "type": "string",
      "minLength": 3,
      "maxLength": 10
    },
    "trading_status": {
      "type": "string",
      "enum": [
        "open",
        "halted",
        "auction",
        "closed"
      ]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "symbol",
    "venue",
    "bid",
    "ask",
    "last",
    "timestamp",
    "trading_status"
  ],
  "allOf": [
    {
      "if": {
        "properties": {
          "trading_status": {
            "const": "open"
          }
        }
      },
      "then": {
        "properties": {
          "spread": {
            "type": "number",
            "exclusiveMinimum": 0
          }
        },
        "required": [
          "spread"
        ]
      }
    }
  ]
}
