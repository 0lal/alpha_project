{
  "_header": {
    "Goal": "مخطط إعدادات التشغيل العامة للنظام.",
    "Dependencies": [
      "Launcher",
      "Service Locator",
      "Observability",
      "Security"
    ]
  },
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "environment": {
      "type": "string",
      "enum": [
        "dev",
        "staging",
        "prod"
      ]
    },
    "region": {
      "type": "string",
      "minLength": 2
    },
    "log_level": {
      "type": "string",
      "enum": [
        "DEBUG",
        "INFO",
        "WARNING",
        "ERROR",
        "CRITICAL"
      ]
    },
    "timezone": {
      "type": "string",
      "default": "UTC"
    },
    "feature_flags": {
      "type": "object",
      "additionalProperties": {
        "type": "boolean"
      }
    }
  },
  "required": [
    "environment",
    "region",
    "log_level"
  ]
}
