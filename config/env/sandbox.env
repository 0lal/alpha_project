# Resource Limits for Sandboxed Processes

# ALPHA SOVEREIGN ORGANISM - SANDBOX CONSTRAINTS (The Quarantine Cell)
# ====================================================================
# File: config/env/sandbox.env
# Pillar: Stability & Immunity (الركيزة: الاستقرار والمناعة)
# Forensic Purpose: Resource Exhaustion Prevention (منع هجمات استنزاف الموارد)
# ====================================================================

# -----------------------------------------------------------------------------
# 1. سياسة العزل (ISOLATION POLICY)
# -----------------------------------------------------------------------------
# مستوى الصرامة:
# STRICT: يتم قتل العملية فوراً عند تجاوز أي حد.
# SOFT: يتم إرسال تحذير أولاً، ثم القتل بعد 5 ثوانٍ.
SANDBOX_POLICY=STRICT

# المحرك المستخدم للعزل:
# DOCKER: يستخدم حاويات دوكر (الأكثر أماناً).
# WASM: يستخدم WebAssembly (الأسرع والأخف).
# PROCESS: يستخدم عمليات معزولة بمكتبة OS (أقل أماناً، للمحاكاة فقط).
ISOLATION_ENGINE=DOCKER

# -----------------------------------------------------------------------------
# 2. قيود المعالج (CPU CONSTRAINTS)
# -----------------------------------------------------------------------------
# النسبة القصوى المسموح بها من قوة المعالج لكل عملية معزولة.
# الهدف الجنائي: منع برمجيات التعدين الخبيثة (Crypto-miners) من استغلال جهازك.
# 0.20 تعني 20% فقط من نواة واحدة.
MAX_CPU_QUOTA=0.20

# الأنوية المسموح باستخدامها (CPU Affinity):
# عزل الأكواد المشبوهة في الأنوية الأخيرة (E-Cores) وترك الأنوية القوية (P-Cores) للمحرك الرئيسي.
ALLOWED_CORES_MASK=2,3

# -----------------------------------------------------------------------------
# 3. قيود الذاكرة (MEMORY CONSTRAINTS)
# -----------------------------------------------------------------------------
# الحد الأقصى للرام بالميجابايت.
# الهدف الجنائي: منع هجمات تسريب الذاكرة (Memory Leaks) التي قد تؤدي لتهنيج الجهاز.
MAX_RAM_MB=512

# الحد الأقصى للذاكرة التبادلية (Swap).
# 0 تعني ممنوع استخدام الهارد كرام (للحفاظ على سرعة الـ SSD).
MAX_SWAP_MB=0

# -----------------------------------------------------------------------------
# 4. قيود العمليات (PROCESS & THREADS)
# -----------------------------------------------------------------------------
# الحد الأقصى لعدد العمليات الفرعية (Child Processes).
# الهدف الجنائي: منع هجمات "Fork Bomb" التي تقوم بنسخ نفسها ملايين المرات لقتل النظام.
MAX_PROCESS_COUNT=5

# -----------------------------------------------------------------------------
# 5. قيود الشبكة والملفات (NETWORK & I/O)
# -----------------------------------------------------------------------------
# السماح بالإنترنت؟
# FALSE: الكود المعزول أعمى وأصم (لا يمكنه إرسال بياناتك لخوادم خارجية).
ALLOW_OUTBOUND_NET=FALSE

# سرعة الكتابة على القرص (MB/s).
# الهدف الجنائي: منع هجمات تدمير القرص الصلب بكتابة ملفات عشوائية ضخمة (Disk Thrashing).
MAX_DISK_WRITE_SPEED=10

# -----------------------------------------------------------------------------
# 6. الموت الرحيم (LIFESPAN)
# -----------------------------------------------------------------------------
# الزمن الأقصى لتنفيذ الكود بالثواني.
# إذا لم ينته الكود خلال 30 ثانية، يعتبر "عالقاً" (Hung) ويتم إعدامه.
MAX_EXECUTION_TIME_SEC=30