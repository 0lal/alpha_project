{
  "_meta_header": {
    "classification": "SECURITY / DATA INTEGRITY",
    "version": "4.0.0-Sovereign-Firewall",
    "role": "The Gatekeeper: Filters Signal from Noise before it touches the Brain.",
    "enforcement": "STRICT_BLOCK",
    "linked_policy": "config/knowledge/source_credibility.yaml"
  },

  "market_data_firewall": {
    "_desc": "Filters for The Technical Sniper. Rejects bad ticks and toxic assets.",
    
    "asset_quality_gate": {
      "_comment": "Prevent interaction with rug-pulls and zombie coins.",
      "min_24h_volume_usd": 2000000.0,
      "min_liquidity_depth_2_percent_usd": 100000.0,
      "min_exchange_listings": 2,
      "_action": "DROP_PACKET"
    },

    "flash_crash_protection": {
      "_comment": "Sanity check for price feeds. Rejects API errors.",
      "max_tick_deviation_percent": 15.0,
      "max_bid_ask_spread_percent": 1.0,
      "_forensic_note": "If spread > 1%, the order book is thin or manipulated."
    },

    "symbol_scope": {
      "mode": "HYBRID_WHITELIST",
      "always_allow": ["BTC", "ETH", "SOL", "BNB", "XRP", "USDT", "USDC"],
      "dynamic_inclusion": "TOP_20_BY_MARKET_CAP",
      "strict_blacklist": ["LUNA", "FTT", "USUST", "HEX", "SAFEMOON"]
    }
  },

  "semantic_news_firewall": {
    "_desc": "Filters for The Chief Economist. Blocks spam and irrelevant noise.",
    
    "keyword_blacklist": {
      "_comment": "Immediate rejection triggers.",
      "scam_vectors": [
        "giveaway", "send eth", "doubling", "presale access", 
        "whitelist open", "airdrop claim", "pump signal"
      ],
      "noise_vectors": [
        "celebrity nft", "dating app", "casino", "sports betting", 
        "metaverse land sale", "tick tock"
      ]
    },

    "macro_relevance_filter": {
      "_comment": "Only pass articles that matter to the Economist.",
      "min_nlp_confidence_score": 0.75,
      "required_entities": [
        "Central Banks (Fed, ECB)",
        "Inflation (CPI, PPI)",
        "Regulation (SEC, CFTC)",
        "Geopolitics (War, Sanctions)",
        "Major Exchange (Binance, Coinbase)"
      ]
    },

    "deduplication_engine": {
      "_comment": "Prevent cognitive overload from repetitive news.",
      "algorithm": "COSINE_SIMILARITY",
      "similarity_threshold": 0.85,
      "time_window_seconds": 3600
    }
  },

  "social_sentiment_firewall": {
    "_desc": "Filters for The Market Psychologist. Blocks bot farms.",
    
    "account_integrity_check": {
      "twitter_x": {
        "min_followers": 2500,
        "min_account_age_months": 12,
        "blue_check_required": false,
        "_rationale": "Blue checks are bought. Age and Followers are earned."
      },
      "reddit": {
        "min_karma": 1000,
        "min_account_age_days": 90
      }
    },

    "bot_swarm_defense": {
      "_comment": "Detects coordinated inauthentic behavior.",
      "block_repeated_text_blocks": true,
      "max_hashtags_allowed": 4,
      "max_cashtags_allowed": 3,
      "entropy_check": {
        "enabled": true,
        "min_text_entropy": 2.5,
        "_explanation": "Low entropy means the text is likely generated by a simple script."
      }
    }
  },

  "threat_intelligence_feed": {
    "_desc": "Filters for The Guardian Sentinel. Priority Channel.",
    
    "priority_keywords": [
      "HACK", "EXPLOIT", "DEPEG", "INSOLVENCY", "HALT", 
      "WITHDRAWALS PAUSED", "SEC LAWSUIT", "ARRESTED"
    ],
    
    "action": "BYPASS_QUEUE_AND_ALERT_IMMEDIATELY"
  },

  "technical_integrity": {
    "_desc": "DoS Protection for the Database.",
    
    "ingestion_rate_limits": {
      "market_data_tps": 200,
      "news_items_per_minute": 50,
      "social_posts_per_minute": 100
    },
    
    "payload_validation": {
      "max_json_depth": 5,
      "max_string_length": 5000,
      "reject_malformed_utf8": true
    }
  }
}